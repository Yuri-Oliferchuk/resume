<!DOCTYPE html>
<html lang=<%= lang %>>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" type="text/css" href="../css/mystyle.css">
    <title>Admin</title>
</head>
<body>
    <table>
        <tr id="top-menu">
            <th id="lang">
                <a href="../eng/admin">EN</a>
                <p>&nbsp/&nbsp</p>
                <a href="../ua/admin">UA</a>
            </th>
            <th>
                <a id="home" href="../../">Home</a>
            </th>
        </tr>
        <tr>
        <td><div>
            <form action="../api/<%= lang %>/admin/info" method="post">
                <label for="name">Name:</label>
                <input id="name" name="name" type="name" required autofocus>
                <label for="photo_link">Photo link:</label>
                <input id="photo_link" name="photo_link" type="text" required>
                <label for="text">Text:</label>
                <textarea id="text" name="text" rows="25" cols="40"></textarea>
                <label for="contacts">Contacts:</label>
                <textarea id="contacts" name="contacts" rows="25" cols="40"></textarea>
                <br>
            <button class="button" type="submit">Change data</button>
            <br>
            <br>
            </form>
        </div></td>      
        </tr>
    </table>
    
    <script>
        let infoObj = {};
        let request = new XMLHttpRequest();
        request.open('GET', '../api/<%= lang %>/admin/info');
        request.responseType = 'json';
        request.send();

        request.onload = async() => {
            infoObj = await request.response;
            document.getElementById('name').value = infoObj.name;
            document.getElementById('photo_link').value = infoObj.photo_link;
            document.getElementById('text').value = infoObj.text;
            document.getElementById('contacts').value = infoObj.contacts;
        }
      </script>
</body>
</html>